                },
                {
                    "type": "color",
                    "id": "icon_color",
                    "label": "Cor do icone",
                    "default": "#28a745"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Título"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Descrição"
                }
            ]
        }
    ],
