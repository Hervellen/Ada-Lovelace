{%- comment -%}
    Spacing
{%- endcomment -%}
{% assign pt =  section.settings.padding_top | prepend: 'pt-' %}
{% assign pb =  section.settings.padding_bottom | prepend: 'pb-' %}
{% assign mt =  section.settings.margin_top | prepend: 'mt-' %}
{% assign mb =  section.settings.margin_bottom | prepend: 'mb-' %}



{%- comment -%}
    Begin section
{%- endcomment -%}
<section id="infobar" style=" background: {% if section.settings.bg_cor %}{{ section.settings.bg_cor }} {% endif %}; color: {% if section.settings.infolink %}{{ section.settings.infolink }} {% endif %} " >
    <div class=" {{ pt }} {{ pb }} {{ mt }} {{ mb }}{% if section.settings.container %} container {% else %} container-fluid {% endif %}">

        <ul class="list-unstyled mx-n3 mb-0 row row-cols-{{ section.settings.row_mobile }} row-cols-md-{{ section.settings.row_tablet }} row-cols-lg-{{ section.settings.row_desktop }}">

            {% for block in section.blocks %}
                <li
                    class="infobar-item px-3 py-4 d-flex align-items-center {% unless section.settings.animate_class == blank %}animate__animated animate__fast{% endunless %} {{ forloop.index | prepend: 'enter-view-step-' }}"
                    data-animate="{{ section.settings.animate_class }}">

                    <!-- Icon -->
                    <div class="mr-4" style="color: {{ block.settings.icon_color }};">
                        {{ block.settings.icon }}
                    </div>

                    <div>
                         <!-- Title -->
                         <h3 class="{{ section.settings.title_size }} {{ title_color }}" style="font-weight: 700">
                            {{ block.settings.title }}
                        </h3>

                        <!-- Description -->
                        <div class="rte {{ desc_color }}">
                            {{ block.settings.description }}
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>

{% schema %}
{
    "name": "Barra de informações",
    "class": "overflow-hidden",
    "settings": [

        {
            "type": "color",
            "id": "bg_cor",
            "label": "Cor do background",
            "default": "#fff"
        },
        {
            "type": "color",
            "id": "infolink",
            "label": "Cor do texto",
            "default": "#000"
        },
        {
            "type": "checkbox",
            "id": "container",
            "label": "Wrap container",
            "default": true
        },
        {
            "type": "select",
            "id": "title_size",
            "label": "Tamanho do título",
            "default": "h6",
            "options": [
                { "value": "h1", "label": "H1" },
                { "value": "h2", "label": "H2" },
                { "value": "h3", "label": "H3" },
                { "value": "h4", "label": "H4" },
                { "value": "h5", "label": "H5" },
                { "value": "h6", "label": "H6" }
            ]
        },
        {
            "type": "text",
            "id": "animate_class",
            "label": "Animação",
            "info": "Efeito de animação ao rolar. Ele dispara apenas uma vez. Deixe vazio para desativar [Saiba mais](https://animate.style/). Sugerido: animate__zoomInUp"
        },
        {
            "type": "header",
            "content": "Linhas"
        },
        {
            "type": "range",
            "id": "row_mobile",
            "label": "Itens por linha / Mobile",
            "min": 1,
            "max": 3,
            "step": 1,
            "default": 1
        },
        {
            "type": "range",
            "id": "row_tablet",
            "label": "Itens por linha / Tablet",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 2
        },
        {
            "type": "range",
            "id": "row_desktop",
            "label": "Itens por linha / Desktop",
            "min": 1,
            "max": 6,
            "step": 1,
            "default": 4
        },
        {
            "type": "header",
            "content": "Espaçamento",
            "info": "Com base nas classes do utilitário de espaçamento Bootstrap [Saiba mais](https://getbootstrap.com/docs/4.5/utilities/spacing/)"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Padding top",
            "min": 0,
            "max": 12,
            "step": 1,
            "default": 6
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Padding bottom",
            "min": 0,
            "max": 12,
            "step": 1,
            "default": 4
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Content",
            "settings": [
                {
                    "type": "html",
                    "id": "icon",
                    "label": "Icone",
