

{% comment %}
    Toast
    We use toast (snackbar) as way to display various ajax messages like
    when you add an item to cart. Toasts are fully accessible.
{% endcomment %}

<div
    id="toast-wrapper"
    class="toast-wrapper {{ settings.toast_position }}">
    <div 
        id="toast" 
        class="toast hide animate__animated"
        data-delay="{{ settings.toast_delay | times: 1000 }}" 
        data-animate-enter="{{ settings.toast_animation_enter }}"
        data-animate-exit="{{ settings.toast_animation_exit }}"
        data-animate-speed="{{ settings.toast_animation_speed }}"
        data-img-width="{{ settings.toast_img_width }}"
        data-img-height="{{ settings.toast_img_height }}"
        data-img-thumbnail="{{ settings.toast_img_thumbnail }}"
        data-btn-color="{{ settings.toast_btn_color }}"
        data-btn-size="{{ settings.toast_btn_size }}"
        aria-live="assertive" 
        aria-atomic="true">
        <div class="toast-header">
            <strong class="mr-auto d-flex align-items-center">
                <!-- Auto injected via JS -->
            </strong>
            <button 
                type="button" 
                class="ml-2 mb-1 close"
                data-dismiss="toast"
                aria-label="{{ 'general.accessibility.close' | t }}">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            <!-- Auto injected via JS -->
        </div>
        <div class="toast-footer px-3 pt-0 pb-3">
            <!-- Auto injected via JS -->
        </div>
    </div>
</div>